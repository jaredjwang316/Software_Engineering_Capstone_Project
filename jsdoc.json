{
    "plugins": [
      "node_modules/better-docs/typescript",
      "plugins/markdown"],
    "source": {
      "include": ["src/lib"],
      "includePattern": "\\.(ts|tsx)$"
    },
    "opts": {
      "destination": "./docs",
      "recurse": true,
      "template": "node_modules/docdash",  
      "readme": "README.md"
    },
    "typescript": {
      "enabled": true,
      "moduleRoot": "src/lib"
    }
}