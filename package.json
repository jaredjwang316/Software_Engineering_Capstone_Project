{
	"name": "lemma",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run prepare && vite dev",
		"build": "npm run prepare && vite build",
		"preview": "vite preview",
		"prepare": "npm run smui-theme-light && npm run smui-theme-dark",
		"smui-theme-light": "smui-theme compile src/theme/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile src/theme/dark/smui-dark.css -i src/theme/dark",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@smui/button": "^8.0.0-beta.3",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"smui-theme": "^8.0.0-beta.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@types/pg": "^8.11.11",
		"dotenv": "^16.4.7",
		"pg": "^8.13.3"
	}
}
