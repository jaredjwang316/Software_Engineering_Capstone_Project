{
	"name": "lemma",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"bin": {
		"server": "server/index.mjs"
	},
	"scripts": {
		"dev": "cross-env NODE_ENV=development vite",
		"build_client": "cross-env NODE_ENV=production vite build",
		"build_server": "cross-env NODE_ENV=production server/build.sh",
		"build": "concurrently \"npm run build_client\" \"npm run build_server\" -n client,server -c \"bgBlue.bold,bgMagenta.bold\"",
		"start_server": "sh -c 'cd server && nodemon ./index.mjs'",
		"start_client": "cross-env NODE_ENV=production vite preview --port 3000",
		"start": "concurrently \"npm run start_server\" \"npm run start_client\" -n client,server -c \"bgBlue.bold,bgMagenta.bold\"",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "playwright test"
	},
	"devDependencies": {
		"@playwright/test": "^1.51.1",
		"@skeletonlabs/skeleton": "^2.11.0",
		"@skeletonlabs/tw-plugin": "^0.4.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.14",
		"autoprefixer": "^10.4.20",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@codingame/esbuild-import-meta-url-plugin": "^1.0.3",
		"@fortawesome/free-solid-svg-icons": "^6.7.2",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@lucia-auth/adapter-postgresql": "^3.1.2",
		"@lucide/svelte": "^0.479.0",
		"@node-rs/argon2": "^2.0.2",
		"@types/pg": "^8.11.11",
		"concurrently": "^9.1.2",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"ip-anonymize": "^0.1.0",
		"lean4monaco": "^1.0.42",
		"lucia": "^3.2.2",
		"lucide-svelte": "^0.476.0",
		"nocache": "^4.0.0",
		"nodemon": "^3.1.9",
		"pg": "^8.13.3",
		"vite-plugin-commonjs": "^0.10.4",
		"vite-plugin-node-polyfills": "^0.23.0",
		"vite-plugin-static-copy": "^2.2.0",
		"vscode-ws-jsonrpc": "^3.4.0",
		"ws": "^8.18.1"
	}
}
